@using ProgramStudio.DeployCheckToolkits.BaseData.Dto
@using ProgramStudio.DeployCheckToolkits.Web.Models.Common.Modals
@model ProjectInfoDto
@{
    Layout = null;
}
@await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("ProjectInfo")))

<div class="modal-body">
    <form name="BaseDataEditForm" role="form" novalidate class="form-validation">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group form-float">
            <div class="form-line">
                <input class="form-control" type="text" name="ProjectName" value="@Model.ProjectName" required maxlength="100" minlength="2">
                <label class="form-label">@L("ProjectName")</label>
            </div>
        </div>
        <div class="form-group form-float">
            <div class="">
                <input id="isactive" type="checkbox" name="IsActive" value="true" @(Model.IsActive ? "checked" : "") class="form-control" />
                <label for="isactive" class="form-label">@L("IsActive")</label>
            </div>
        </div>
    </form>
</div>

@await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/BaseData/_EditModal.js" asp-append-version="true"></script>
