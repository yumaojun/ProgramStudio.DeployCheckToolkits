@using ProgramStudio.DeployCheckToolkits.Web.Startup

@model List<ProgramStudio.DeployCheckToolkits.Web.WebUploadFileInfo>

@{
    ViewBag.CurrentPageName = PageNames.Files;
}
@section styles{
    @*<link href="~/css/page.css" rel="stylesheet" asp-append-version="true" />*@
}
@section scripts{
    <script type="text/javascript">
        function returnDeployCheck() {
            window.location.href = abp.appPath + "DeployCheck";
        }
        $(document).ready(function () {
            $('#ReturnCheck').click(function () {
                returnDeployCheck();
            });
        })
    </script>
}
<div id="app" class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    @L("File")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a id="ReturnCheck" href="javascript:void(0);" class="waves-effect waves-block"><i class="material-icons">refresh</i>@L("ReturnCheck")</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Web目录中的文件</th>
                            <th>文件管理中的文件</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var filename in Model)
                        {
                            <tr>
                                <td>
                                    @filename.FileName1
                                </td>
                                <td>
                                    @filename.FileName2
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
