<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs" xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  <!-- Adding variable -->
  <?include Variables.wxi ?>
  <Package Name="dnGrep $(var.MajorVersion).$(var.MinorVersion).$(var.BuildVersion) ($(var.Platform))" Language="1033" Version="$(var.ProductVersion)" Manufacturer="dnGrep Community Contributors" UpgradeCode="4CF55558-B642-482E-9FBF-06EA5AEC8276" InstallerVersion="200"><Media Id="1" Cabinet="media1.cab" EmbedCab="yes" />

    <!-- Perform conditional checks -->
    <?include Conditions.wxi ?>

    <!-- Prevent modification/repair -->
    <Property Id="ARPNOREPAIR" Value="1" />
    <Property Id="ARPNOMODIFY" Value="1" />

    <!-- Properties -->
    <Property Id="INSTALLLEVEL" Value="3" />
    <Property Id="REINSTALLMODE" Value="amus" />
    
    <!-- uncomment the next line to write verbose logs to %temp%\MSIxxxxx.LOG -->
    <!--<Property Id="MsiLogging" Value="v" />-->

    <!-- Icon -->
    <Icon Id="nGREP.ico" SourceFile="nGREP.ico" />
    <Property Id="ARPPRODUCTICON" Value="nGREP.ico" />

    <!-- ========================== UI =============================-->
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLDIR" />
    <Property Id="INSTALL_MODE" Value="Custom" />
    <ui:WixUI Id="WixUI_Mondo" />
    <UIRef Id="WixUI_ErrorProgressText" />
    <WixVariable Id="WixUILicenseRtf" Value="license.rtf" />
    <WixVariable Id="WixUIBannerBmp" Value="header.bmp" />
    <WixVariable Id="WixUIDialogBmp" Value="intro.bmp" />
    <!-- ===========================================================-->

    <!-- ================== Custom Actions =========================-->
    <!-- Call DCAS Installer -->
    <CustomAction Id="PreventDowngrading" Error="Newer version of dnGrep is already installed." />
    <CustomAction Id="PreventReInstalling" Error="dnGrep version $(var.ProductVersion) is already installed." />
    <!-- ===========================================================-->

    <Upgrade Id="4CF55558-B642-482E-9FBF-06EA5AEC8276">
      <!-- Will prevent reinstalling the same version IF MSI with the same version but different Product ID has been previously installed -->
      <UpgradeVersion OnlyDetect="yes" Property="SELFFOUND" Minimum="$(var.ProductVersion)" IncludeMinimum="yes" Maximum="$(var.ProductVersion)" IncludeMaximum="yes" />
      <UpgradeVersion OnlyDetect="yes" Property="NEWERFOUND" Minimum="$(var.ProductVersion)" IncludeMinimum="no" />
      <UpgradeVersion OnlyDetect="no" Property="PREVIOUSFOUND" Minimum="0.0.0.0" IncludeMinimum="yes" Maximum="$(var.ProductVersion)" IncludeMaximum="no" />
    </Upgrade>

    

    <!-- Create shell integration -->
    

    <!-- Add the shortcut to Program Files -->
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="ApplicationShortcut" Guid="78E286ED-5A4A-4F17-AF9E-79DBD8172998">
        <Shortcut Id="ApplicationStartMenuShortcut" Name="dnGrep" Description="dnGrep application" Target="[INSTALLDIR]dnGREP.exe" WorkingDirectory="INSTALLDIR" />
        <Shortcut Id="UninstallShortcut" Name="Uninstall dnGrep" Description="Uninstalls dnGrep" Target="[SystemFolder]msiexec.exe" Arguments="/x [ProductCode]" />

        <RemoveFolder Id="ApplicationProgramsFolder" On="uninstall" />
        <RegistryValue Root="HKCU" Key="Software\Microsoft\dnGREP" Name="installed" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <Feature Id="CoreFiles" Title="dnGrep" Display="expand" AllowAdvertise="no" Description="Core dnGrep application." Level="1" ConfigurableDirectory="INSTALLDIR" AllowAbsent="no">
      <ComponentGroupRef Id="dnGREPAppFiles" />
      <ComponentRef Id="ApplicationShortcut" />
      <Feature Id="ShellIntegration" Title="Windows Explorer menu" AllowAdvertise="no" Description="Add dnGrep to Windows Explorer right-click menu." Level="2">
        <ComponentRef Id="ShellIntegration" />
      </Feature>
      <Feature Id="Plugins" Title="Plugins" Level="2" Display="expand">
        <ComponentRef Id="Dummy" />
        <Feature Id="PdfPlugin" Title="PDF Search" AllowAdvertise="no" Description="PDF Search plugin" Level="2">
          <ComponentGroupRef Id="dnGREPPluginFilesPdf" />
        </Feature>
        <Feature Id="WordPlugin" Title="Word Search" AllowAdvertise="no" Description="MS Word Search plugin" Level="2">
          <ComponentGroupRef Id="dnGREPPluginFilesWord" />
        </Feature>
        <Feature Id="OpenXmlPlugin" Title="Excel and Word Search" AllowAdvertise="no" Description="Open XML Search plugin" Level="2">
          <ComponentGroupRef Id="dnGREPPluginFilesOpenXml" />
        </Feature>
      </Feature>
    </Feature>

    <!-- Sequences -->
    <InstallExecuteSequence>
      <Custom Action="PreventDowngrading" After="FindRelatedProducts" Condition="NEWERFOUND" />
      <Custom Action="PreventReInstalling" After="FindRelatedProducts" Condition="SELFFOUND" />
      <RemoveExistingProducts After="InstallInitialize" />
      <Custom Action="NetFxExecuteNativeImageCommitInstall" After="NetFxExecuteNativeImageUninstall" Condition="0" />
      <Custom Action="NetFxExecuteNativeImageInstall" After="NetFxExecuteNativeImageCommitInstall" />
    </InstallExecuteSequence>

    <UI>
      <ProgressText Action="NetFxExecuteNativeImageInstall" Message="Running ngen to optimize the application" />
    </UI>
    
    <InstallUISequence>
      <Custom Action="PreventDowngrading" After="FindRelatedProducts" Condition="NEWERFOUND" />
      <Custom Action="PreventReInstalling" After="FindRelatedProducts" Condition="SELFFOUND" />
    </InstallUISequence>
  
      <Directory Id="$(var.PlatformProgramFilesFolder)">
        <Directory Id="INSTALLDIR" Name="dnGrep">
          <Directory Id="PluginsDir" Name="Plugins">
          </Directory>
        </Directory>
      </Directory>
      <StandardDirectory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="dnGrep" />
      </StandardDirectory>
    
      <Component Id="ShellIntegration" Guid="8B727769-A7FF-49D9-B685-8DBDA51F81F7">
        <RegistryKey Root="HKCR" Key="Directory\shell\dnGREP">
          <RegistryValue Name="Icon" Type="expandable" Value="[INSTALLDIR]dnGREP.exe" />
          <RegistryValue Type="string" Value="dnGrep..." />
        </RegistryKey>
        <RegistryKey Root="HKCR" Key="Directory\shell\dnGREP\command">
          <RegistryValue Type="expandable" Value="&quot;[INSTALLDIR]dnGREP.exe&quot; &quot;%1&quot;" />
        </RegistryKey>
        <RegistryKey Root="HKCR" Key="Drive\shell\dnGREP">
          <RegistryValue Name="Icon" Type="expandable" Value="[INSTALLDIR]dnGREP.exe" />
          <RegistryValue Type="string" Value="dnGrep..." />
        </RegistryKey>
        <RegistryKey Root="HKCR" Key="Drive\shell\dnGREP\command">
          <RegistryValue Type="expandable" Value="&quot;[INSTALLDIR]dnGREP.exe&quot; &quot;%1&quot;" />
        </RegistryKey>
        <RegistryKey Root="HKCR" Key="*\shell\dnGREP">
          <RegistryValue Name="Icon" Type="expandable" Value="[INSTALLDIR]dnGREP.exe" />
          <RegistryValue Type="string" Value="dnGrep..." />
        </RegistryKey>
        <RegistryKey Root="HKCR" Key="*\shell\dnGREP\command">
          <RegistryValue Type="expandable" Value="&quot;[INSTALLDIR]dnGREP.exe&quot; &quot;%1&quot;" />
        </RegistryKey>
        <RegistryKey Root="HKLM" Key="SOFTWARE\Classes\Directory\Background\shell\dnGREP">
          <RegistryValue Name="Icon" Type="expandable" Value="[INSTALLDIR]dnGREP.exe" />
          <RegistryValue Type="string" Value="dnGrep..." />
        </RegistryKey>
        <RegistryKey Root="HKLM" Key="SOFTWARE\Classes\Directory\Background\shell\dnGREP\command">
          <RegistryValue Type="expandable" Value="&quot;[INSTALLDIR]dnGREP.exe&quot; &quot;%V&quot;" />
        </RegistryKey>
      </Component>
      <Component Id="Dummy" Guid="595484D3-6E27-48F9-BEDE-008518B1029E" Location="local" />
    </Package>
</Wix>
